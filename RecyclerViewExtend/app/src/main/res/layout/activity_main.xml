    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jobscolin.recyclerviewextend.example.MainActivity">


   <Button
       android:id="@+id/decoration_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="分割线" />

   <Button
       android:id="@+id/animator_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="item动画" />

   <Button
       android:id="@+id/layout_manager_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="LayoutManager" />

   <Button
       android:id="@+id/item_touch_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="ItemTouch"/>

